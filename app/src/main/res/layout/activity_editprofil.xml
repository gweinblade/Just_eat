<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editprofil"
    android:orientation="vertical"
    android:layout_gravity="center"
    >
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_centerHorizontal="true"
        >
    <RelativeLayout
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/splashscreen"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/aboutimage"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_width="120dp"
            android:tint="@color/black"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_centerVertical="false"
            />
        <TextView
            android:id="@+id/afficheName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Edit Your Profil "
            android:textAlignment="center"
            android:fontFamily="@font/baumans"
            android:textColorHint="@color/bla"
            android:textSize="50dp"
            android:layout_marginTop="23dp"
            android:textColor="@color/bla"
            android:layout_below="@id/aboutimage"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
        <ImageButton
            android:id="@+id/gobackpro"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:id="@+id/relabout">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardabout"
            android:layout_width="350dp"
            android:layout_height="280dp"
            android:layout_marginTop="275dp"
            android:layout_centerHorizontal="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <EditText
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:id="@+id/enterUser"
                    android:drawableLeft="@drawable/ic_tag_faces_black_24dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:hint="Your Name"
                    android:padding="20dp"
                    android:textSize="20sp"
                    android:textColorHint="#606060"
                    android:inputType="text"/>
                <EditText
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:id="@+id/mbr"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:hint="Your Phone"
                    android:padding="20dp"
                    android:textSize="20sp"
                    android:textColorHint="#606060"
                    android:inputType="text"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>



    <Button
        android:id="@+id/Validate"
        android:background="@drawable/custom_color1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:text="Validate"
        android:textSize="25sp"
        android:textColor="@color/st2"
        android:layout_alignBottom="@+id/relabout"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>